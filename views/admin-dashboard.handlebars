<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" type="text/css" href="../../public/css/style.css">
</head>

<body>
  <header>
    <h1>Rental Bazaar Admin Dashboard</h1>
  </header>
    {{#if loggedIn}}
      {{#if isAdmin}}
    <div class="sidenav">
      <a href="/user-dashboard" class="admin-users-nav">Users</a>
      <a href="/user-reports" class="admin-reports-nav">User Reports</a>
      <a href="/logout" id ="logout"class="admin-users-nav">Logout</a>
    </div>
      {{else}}
        <p>You do not have permissions to view this page <a href="/">Go to Home Page</a></p>
      {{/if}}

    {{else}}
    <div class="admin-login-card">
        <label for="admin-email-login">Username:</label>
        <input class="form-input" type="username" id="email-login"/>
        <label for="admin-password-login">Password:</label>
        <input class="form-input" type="password" id="password-login"/>
        <button class="btn btn-primary" type="submit">login</button>
    </div>
    {{/if}}
  </main>
  {{#if loggedIn}}
  <script src="./js/logout.js"></script>
  {{else}}
  <script src="./js/login.js"></script>
  {{/if}}
</body>

</html>